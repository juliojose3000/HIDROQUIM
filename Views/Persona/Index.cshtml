@model IEnumerable<HIDROQUIM.Models.Persona>

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        a {
            font-size: 125%;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">

    <link href="~/Content/IndexGenericos.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<nav class="navbar navbar-dark">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="row">
                <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                <div class="col-lg-1 col-lg-offset-1"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
            </div>


        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-left">

                <li class="dropdown">
                    <a class="dropdown-toggle"
                       data-toggle="dropdown" href="#">
                        Cliente Entidad <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Entidad/Create">Agregar Entidad</a></li>
                        <li><a href="/Entidad/Index">Gestionar Entidad</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle"
                       data-toggle="dropdown" href="#">
                        Cliente Persona <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Persona/Create">Agregar Cliente </a></li>
                        <li><a href="/Persona/Index">Gestionar Cliente</a></li>
                    </ul>
                </li>

            </ul>



        </div>
    </div>
</nav>
<br /><br /><br />
<h2>Index</h2>

<p>
    @Html.ActionLink("Registrar Persona", "Create")
</p>
<div>
    <form asp-controller="Persona" asp-action="Index" method="get">

        Nombre: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />

    </form>
    <form asp-controller="Persona" asp-action="IndexGetAll" method="get">
        <input type="submit" value="Mostar Todos" />

    </form>
</div>
<table class="table">

    <tr>
        <th>
            Cédula

        </th>
        <th>
            Código del cliente
        </th>
        <th>
            Nombre del Cliente
        </th>
        <th>
            Nombre de Usuario
        </th>
        <th>
            Contraseña
        </th>

        <th>
            Correo electrónico
        </th>
        <th>
            Número de teléfono célular
        </th>
        <th>
            Número de teléfono fijo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nombre_cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Password)
            </td>
          
         
            <td>
                @Html.DisplayFor(modelItem => item.InformacionContacto.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformacionContacto.TelefonoCelular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformacionContacto.TelefonoFijo)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Cedula }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Cedula })
            </td>
        </tr>
    }

</table>
<br /><br /><br />

<footer class="container-fluid footcolor text-center ">
    <p class="colorHidro ">Hidroquim <a href="# ">www.hidro15R.com</a></p>
</footer>

