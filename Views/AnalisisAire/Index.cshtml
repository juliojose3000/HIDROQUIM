@model IEnumerable<HIDROQUIM.Models.AnalisisQuimicoAire>

<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <title>SistemaMonitoreo</title>
    <base href="/">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/analisis-suelo.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>


</head>

<body>
    <nav class="navbar navbar-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="row">
                    <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                    <div class="col-lg-1 col-lg-offset-2"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
                </div>


            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/VistasAdministrador/GestionarAnalisisQuimico">Gestionar Análisis Químico</a></li>
                    <li><a href="#">Inventario</a></li>
                    <li><a href="/Encargado/Index">Empleados</a></li>
                    <li><a href="/VistasAdministrador/GestionarCliente">Clientes</a></li>
                    <li><a href="#">Cerrar sesion</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <br /><br />

        <div class="row">
            <div class="col-lg-6">
                <h4>
                    @Html.ActionLink("Insertar un nuevo análisis de aire", "Create")
                </h4>
            </div>
            <div class="col-lg-6">
                <form asp-controller="AnalisisAire" asp-action="Index" method="get">

                    Contaminante: <input type="text" name="SearchString">
                    <input class="form-horizontal btn btn-default" type="submit" value="Filtar" />

                </form>
                <br />
                <form class="text-center" asp-controller="AnalisisAire" asp-action="IndexGetAll" method="get">
                    <input class="form-horizontal btn btn-default" type="submit" value="Mostrar Todos" />

                </form>
            </div>
        </div>
        <br /><br />

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AnalisisQuimico.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnalisisQuimico.FechaMuestreo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnalisisQuimico.FechaRegistroSistemaAutomatico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnalisisQuimico.FechaResultado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnalisisQuimico.UbicacionGeografica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnalisisQuimico.Cliente.Nombre_cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdAire)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contaminante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoEstandar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValorReferencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TiempoPromedio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MetodoReferencia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResultadoAnalisis)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnalisisQuimico.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnalisisQuimico.FechaMuestreo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnalisisQuimico.FechaRegistroSistemaAutomatico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnalisisQuimico.FechaResultado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnalisisQuimico.UbicacionGeografica)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnalisisQuimico.Cliente.Nombre_cliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdAire)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contaminante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoEstandar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorReferencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TiempoPromedio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MetodoReferencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResultadoAnalisis)
                    </td>>
                    <td>
                        @Html.ActionLink("Modificar", "Edit", new { id = item.IdAire }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAire })
                    </td>
                </tr>

            }

        </table>

    </div>
        <br><br><br><br>
        <!-- Footer -->
        <footer class="container-fluid footcolor text-center ">
            <p class="colorHidro ">Hidroquim <a href="# ">www.hidro15R.com</a></p>
        </footer>

</body>

</html>
