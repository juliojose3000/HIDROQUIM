            </div>
        </div>

        <div class="form-group">
            <h4 class="control-label col-md-2"> Nombre usuario</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
