@model HIDROQUIM.Models.Rol

@{
    ViewBag.Title = "Create";
}

@{
    var roles = (List<HIDROQUIM.Models.Rol>)ViewData["roles"];
}

<!doctype html>
<html lang="en">

<head>
    <style>
        a {
            font-size: 125%;
        }
    </style>
    <meta charset="utf-8">
    <title>SistemaMonitoreo</title>
    <base href="/">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/analisis-suelo.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>

    <script>

        function agregarRol(nombreRol) {
            document.getElementById("labelRol").style.display = 'inherit';
            document.getElementById("rol").type = 'text';
            document.getElementById("rol").value = nombreRol;
        }
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var elements = document.getElementsByTagName("INPUT");
            for (var i = 0; i < elements.length; i++) {
                elements[i].oninvalid = function (e) {
                    e.target.setCustomValidity("");
                    if (!e.target.validity.valid) {
                        e.target.setCustomValidity("Por favor rellene este espacio");
                    }
                };
                elements[i].oninput = function (e) {
                    e.target.setCustomValidity("");
                };
            }
        })
        document.addEventListener("DOMContentLoaded", function () {
            var elements = document.getElementsByTagName("TEXTAREA");
            for (var i = 0; i < elements.length; i++) {
                elements[i].oninvalid = function (e) {
                    e.target.setCustomValidity("");
                    if (!e.target.validity.valid) {
                        e.target.setCustomValidity("Por favor rellene este espacio");
                    }
                };
                elements[i].oninput = function (e) {
                    e.target.setCustomValidity("");
                };
            }
        })
    </script>

</head>

<body>
    <nav class="navbar navbar-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="row">
                    <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                    <div class="col-lg-1 col-lg-offset-1"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
                </div>


            </div>

        </div>
    </nav>
    <br /><br /><br />
    <div class="container">
        <br><br><br>
                <div class="col-md-6 col-md-offset-0">
                    <div class="panel panel-login">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-12">
                                    <a href="#" class="active" id="login-form-link">Ingresar nuevo Encargado</a>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form action="Encargado/Create" method="post" role="form" style="display: block;">

                                        <div class="form-group">
                                            <h4>Cedula: </h4>
                                            <input type="text" required name="cedula" id="cedula" tabindex="2" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <h4>Nombre: </h4>
                                            <input type="text" required name="nombre" id="nombre" tabindex="2" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <h4>Apellidos: </h4>
                                            <input type="text" required name="apellidos" id="apellidos" tabindex="2" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <h4>Correo: </h4>
                                            <input type="text" required name="correo" id="correo" tabindex="2" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <h4>Telefono: </h4>
                                            <input type="text" required name="telefono" id="telefono" tabindex="2" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <h4>Nombre de Usuario: </h4>
                                            <input type="text" required name="userName" id="userName" tabindex="2" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <h4>Contraseña: </h4>
                                            <input type="text" required name="password" id="password" tabindex="2" class="form-control" placeholder="">
                                        </div>
                                        <div class="form-group">
                                            <h4>Selecciona el rol:</h4>
                                            <div class="panel panel-default">
                                                <!-- Trigger the modal with a button -->
                                                <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Roles</button>

                                                <!-- Modal -->
                                                <div id="myModal" class="modal fade" role="dialog">
                                                    <div class="modal-dialog">

                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                <h4 class="modal-title">Selecciona un rol</h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <table>
                                                                    <tr>
                                                                        <th>
                                                                            Id Rol
                                                                        </th>
                                                                        <th>
                                                                            Nombre del Rol
                                                                        </th>
                                                                        <th></th>
                                                                    </tr>

                                                                    @foreach (var rol in roles)
                                                                    {
                                                                        <tr>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => rol.idRol)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => rol.nombreRol)
                                                                            </td>

                                                                            <td>
                                                                                <button type="button" class="btn btn-success" onclick="agregarRol('@Html.DisplayFor(modelItem => rol.nombreRol)')">Agregar</button>

                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                </table>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-lg-offset-1" id="labelRol" style="display:none" name="labelRol" for="pwd">Rol Seleccionado:</label>
                                            <div class="col-lg-offset-3">
                                                <input type="hidden" class="form-control" id="rol" name="rol">
                                            </div>
                                        </div>

                                        <br>
                                        <div class=" form-group ">
                                            <div class="row ">
                                                <div class="col-sm-6 col-sm-offset-3 ">
                                                    <button class="form-horizontal btn btn-default" type="submit">Registrar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>


                            </div>
                            <a href="/Encargado/Index">Atr&aacute;s</a>

                        </div>
                    </div>
                </div>
        <div class="col-md-6 text-center ">
            <img src="~/Images/suelo.png" class="img-responsive izquierda2 " style="width:80% " alt="Image ">

        </div>

    </div>


    <br><br><br><br>
    
    <!-- Footer -->
    <footer class="container-fluid footcolor text-center ">
        <p class="colorHidro ">Hidroquim <a href="# ">www.hidro15R.com</a></p>
    </footer>

</body>

</html>