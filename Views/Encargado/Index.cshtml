@model IEnumerable<HIDROQUIM.Models.Encargado>

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        a {
            font-size: 125%;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">

    <link href="~/Content/IndexGenericos.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<nav class="navbar navbar-dark">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="row">
                <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                <div class="col-lg-1 col-lg-offset-1"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
            </div>


        </div>

    </div>
</nav>
<br /><br /><br />
<h2>Empleados</h2>

<div class="container">
    <br /><br />

    <div class="row">
        <div class="col-lg-6">
            <h4>
                @Html.ActionLink("Insertar un nuevo Encargado", "Create")
            </h4>
        </div>
        <div class="col-lg-6">
            <form asp-controller="Encargado" asp-action="Index" method="get">

                Nombre: <input type="text" name="SearchString">
                <input class="form-horizontal btn btn-default" type="submit" value="Filtar" />

            </form>
            <br />
            <form class="text-center" asp-controller="Encargado" asp-action="IndexGetAll" method="get">
                <input class="form-horizontal btn btn-default" type="submit" value="Mostrar Todos" />

            </form>
        </div>
    </div>
    <br /><br />

    <table class="table">
        <tr>
            <th>
                ID Encargado
            </th>
            <th>
                Cédula
            </th>
            <th>
                Nombre
            </th>
            <th>
                Apellidos
            </th>
            <th>
                Correo eléctronico
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Nombre de Usuario
            </th>
            <th>
                Contraseña
            </th>
            <th>
                Id Rol
            </th>
            <th>
                Nombre del Rol
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEncargado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol.IdRol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rol.NombreRol)
                </td>
                <td>
                    @Html.ActionLink("Modificar", "Edit", new { id = item.IdEncargado }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEncargado })
                </td>
            </tr>
        }

    </table>

    <br><br><br><br>
    <!-- Footer -->
    <footer class="container-fluid footcolor text-center ">
        <p class="colorHidro ">Hidroquim <a href="# ">www.hidro15R.com</a></p>
    </footer>
</div>
