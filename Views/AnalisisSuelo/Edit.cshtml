@model HIDROQUIM.Models.AnalisisQuimicoSuelo

@{
    ViewBag.Title = "Edit";
}

<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <title>SistemaMonitoreo</title>
    <base href="/">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/analisis-suelo.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>

</head>

<body>
    <nav class="navbar navbar-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="row">
                    <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                    <div class="col-lg-1 col-lg-offset-1"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
                </div>


            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/VistasAdministrador/GestionarAnalisisQuimico">Gestionar Análisis Químico</a></li>
                    <li><a href="#">Inventario</a></li>
                    <li><a href="/Encargado/Index">Empleados</a></li>
                    <li><a href="/VistasAdministrador/GestionarCliente">Clientes</a></li>
                    <li><a href="#">Cerrar sesion</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <h2>Modificar análisis de suelo</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <h4 class="control-label col-md-2">ID análisis suelo</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IdSuelo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.IdSuelo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4 class="control-label col-md-2">Determinación</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Determinacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Determinacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4 class="control-label col-md-2">Descripción</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h4 class="control-label col-md-2">Código análisis quimico</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AnalisisQuimico.Codigo, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.AnalisisQuimico.Codigo, "", new { @class = "text-danger" })
                </div>
            </div>
     
            <div class="form-group">
                <h4 class="control-label col-md-2">Fecha resultado</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AnalisisQuimico.FechaResultado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnalisisQuimico.FechaResultado, "", new { @class = "text-danger", @type = "date" })
                </div>
            </div>
            <div class="form-group">
                <h4 class="control-label col-md-2">Ubicación geográfica</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AnalisisQuimico.UbicacionGeografica, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnalisisQuimico.UbicacionGeografica, "", new { @class = "text-danger" })
                </div>
            </div>

            

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver a la lista", "Index")
    </div>
    <br><br><br><br>
    <!-- Footer -->
    <footer class="container-fluid footcolor text-center ">
        <p class="colorHidro ">Hidroquim <a href="# ">www.hidro15R.com</a></p>
    </footer>
</body>
</html>
