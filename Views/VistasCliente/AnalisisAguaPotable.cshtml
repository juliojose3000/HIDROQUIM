@model IEnumerable<HIDROQUIM.Models.AnalisisQuimicoAguaPotable>

@{
    ViewBag.Title = "AnalisisAguaPotable";
}
<head>

    <meta charset="utf-8">
    <title>SistemaMonitoreo</title>
    <base href="/">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/analisis-suelo.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>


</head>
<h4>An&aacute;lisis Agua Potable</h4>
<nav class="navbar navbar-dark">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="row">
                <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                <div class="col-lg-1 col-lg-offset-2"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
            </div>


        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/VistasCliente/AnalisisAguaPotable">An&aacute;lisis Agua Potable</a></li>
                <li><a href="/VistasCliente/AnalisisAguaResidual">An&aacute;lisis Auga Residual</a></li>
                <li><a href="/VistasCliente/AnalisisSuelo">An&aacute;lisis Suelo</a></li>
                <li><a href="/VistasCliente/AnalisisAire">An&aacute;lisis Aire</a></li>
                <li><a href="#">@Html.ActionLink("CerrarSesion", "CerrarSesion") </a></li>
            </ul>
        </div>
    </div>
</nav>
<br /><br />
<div class="row">

    <div class="col-lg-6">
        <form asp-controller="AnalisisSuelo" asp-action="Index" method="get">

            Descripcion: <input type="text" name="SearchString">
            <input class="form-horizontal btn btn-default" type="submit" value="Filtar" />

        </form>
        <br />
        <form class="text-center" asp-controller="VistasCliente" asp-action="AguaPotableGetAll" method="get">
            <input class="form-horizontal btn btn-default" type="submit" value="Mostrar Todos" />

        </form>
    </div>
</div>
<div class="container">
    <br /><br />
    <table class="table">
        <tr>
            <th>
                C&oacute;digo
            </th>

            <th>
                Nivel
            </th>
            <th>
                Fecha de Muestreo
            </th>
            <th>
                Fecha de Ingreso al Sistema
            </th>
            <th>
                Fecha de resultado
            </th>
            <th>
                Ubicaci&oacute;n  Geogr&aacute;fica
            </th>
            <th>
                Resultado
            </th>
           
            <th>
              Detalles
              </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAguaPotable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NivelAguaPotable.Parametro)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AnalisisQuimico.FechaMuestreo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnalisisQuimico.FechaRegistroSistemaAutomatico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnalisisQuimico.FechaResultado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnalisisQuimico.UbicacionGeografica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResultadoAnalisisAguaPotable)
            </td>

            <td>

                @Html.ActionLink("Ver Detalles", "DetallesAguaPotable", new { id = item.IdAguaPotable })
            </td>
        </tr>
        }

    </table>
    <br><br><br><br>
    <!-- Footer -->
    <footer class="container-fluid footcolor text-center ">
        <p class="colorHidro ">Hidroquim <a href="# ">www.hidro15R.com</a></p>
    </footer>
</div>


