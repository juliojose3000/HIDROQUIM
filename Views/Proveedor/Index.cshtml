    ViewBag.Title = "Index";
}
<head>
    <style>
        a {
            font-size: 125%;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">

    <link href="~/Content/IndexGenericos.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<nav class="navbar navbar-dark">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="row">
                <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                <div class="col-lg-1 col-lg-offset-1"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
            </div>


        </div>

    </div>
</nav>
<br /><br /><br />
<h2>Proveedores</h2>

<p>
    @Html.ActionLink("Registrar Proveedor", "Create")
</p>
<form asp-controller="Proveedor" asp-action="Index" method="get">

    Nombre: <input type="text" name="SearchString">
    <input type="submit" value="Filter" />

</form>
<form asp-controller="Reactivo" asp-action="IndexGetAll" method="get">
    <input type="submit" value="Mostar Todos" />

</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdProveedor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Identificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformacionContacto.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformacionContacto.TelefonoCelular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InformacionContacto.TelefonoFijo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformacionContacto.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformacionContacto.TelefonoCelular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformacionContacto.TelefonoFijo)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdProveedor }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdProveedor })
            </td>
        </tr>
    }

</table>
