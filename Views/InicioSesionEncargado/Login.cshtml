
@{
    ViewBag.Title = "Login";
}

<!doctype html>
<html lang="en">

<head>
    <style>
        a {
            font-size: 125%;
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var elements = document.getElementsByTagName("INPUT");
            for (var i = 0; i < elements.length; i++) {
                elements[i].oninvalid = function (e) {
                    e.target.setCustomValidity("");
                    if (!e.target.validity.valid) {
                        e.target.setCustomValidity("Por favor rellene este espacio");
                    }
                };
                elements[i].oninput = function (e) {
                    e.target.setCustomValidity("");
                };
            }
        })
    </script>
    <meta charset="utf-8">
    <title>SistemaMonitoreo</title>
    <base href="/">
    <link href="~/Content/pagina-inicial.component.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" type="text/javascript"></script>
</head>

<body>
    <nav class="navbar navbar-dark">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="row">
                    <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                    <div class="col-lg-1 col-lg-offset-1"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
                </div>


            </div>

        </div>
    </nav>

    <div class="container">
        <br><br><br>
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <h3 style="color:cornflowerblue;">Iniciar Sesión  Encargados</h3>
                    <div class="row">
                        <div class="col-xs-12">

                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-lg-12">
                            <form id="login-form" asp-controller="InicioSesionEncargado" asp-action="Login" method="post" role="form" style="display: block;">
                                <div class="form-group">
                                    <label class="control-label col-sm-3" for="nombre">Usuario:</label>
                                    <input type="text" required name="username" id="username" tabindex="1" class="form-control" placeholder="Usuario" value="">
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3" for="nombre">Contrase&ntilde;a: </label>

                                    <input type="password" required name="password" id="password" tabindex="2" class="form-control" placeholder="Contraseña">
                                </div>
                                <br />
                                <br />

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="btn btn-primary" value="Iniciar sesión">
                                        </div>
                                    </div>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="/Home/Index">Regresar</a>
</body>

</html>
