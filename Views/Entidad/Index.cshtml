@model IEnumerable<HIDROQUIM.Models.Entidad>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        a {
            font-size: 125%;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet" type="text/css">

    <link href="~/Content/IndexGenericos.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<nav class="navbar navbar-dark">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="row">
                <div class="col-lg-1 col-lg-offset-0"><a class="navbar-brand" href="#"> <img src="~/Images/logo.jpg" style="width:80px ; height: 75px" /></a></div>
                <div class="col-lg-1 col-lg-offset-1"><a class="navbar-brand" href="#">Sistema Monitoreo</a></div>
            </div>


        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-left">

                <li class="dropdown">
                    <a class="dropdown-toggle"
                       data-toggle="dropdown" href="#">
                        Cliente Entidad <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Entidad/Create">Agregar Entidad</a></li>
                        <li><a href="/Entidad/Index">Gestionar Entidad</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle"
                       data-toggle="dropdown" href="#">
                        Cliente Persona <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Persona/Create">Agregar Cliente </a></li>
                        <li><a href="/Persona/Index">Gestionar Cliente</a></li>
                    </ul>
                </li>

            </ul>



        </div>
    </div>
</nav>
<br /><br /><br />
<h2>Entidades</h2>
<div class="container">
    <br /><br />

    <div class="row">
        <div class="col-lg-6">
            <h4>
                @Html.ActionLink("Insertar una entidad", "Create")
            </h4>
        </div>
        <div class="col-lg-6">
            <form asp-controller="AnalisisSuelo" asp-action="Index" method="get">

                Descripcion: <input type="text" name="SearchString">
                <input class="form-horizontal btn btn-default" type="submit" value="Filtar" />

            </form>
            <br />
            <form class="text-center" asp-controller="AnalisisSuelo" asp-action="IndexGetAll" method="get">
                <input class="form-horizontal btn btn-default" type="submit" value="Mostrar Todos" />

            </form>
        </div>
    </div>
    <br /><br />
    <table class="table">
        <tr>
            <td>
                Id Entidad
            </td>
            <td>
                Cédula Jurídica
            </td>

            <td>
                Código Información Contacto
            </td>
            <td>
                Correo electrónico
            </td>
            <td>
                Teléfono Fijo
            </td>
            <td>
                Teléfono Celular
            </td>
            <td>
                Código Cliente
            </td>
            <td>
                Nombre del Cliente)
            </td>
            <td>
                Nombre de Usuario
            </td>
            <td>
                Contraseña
            </td>
            <td>
                Código del responsable legal
            </td>
            <td>
                Cédula del responsable legal
            </td>
            <td>
                Nombre completo del responsable legal
            </td>
            <td>
                Código información contacto del responsable legal
            </td>
            <td>
                Correo electrónico del responsable legal
            </td>
            <td>
                Teléfono Celular del responsable legal
            </td>
            <td>
                Telefono Fijo del responsable legal
            </td>

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEntidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CedulaJuridica)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.InformacionContacto.IdInformacionContacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InformacionContacto.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InformacionContacto.TelefonoCelular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InformacionContacto.TelefonoFijo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.IdCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nombre_cliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableLegal.IdReponsableLegal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableLegal.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableLegal.NombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableLegal.InformacionContacto.IdInformacionContacto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableLegal.InformacionContacto.Correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableLegal.InformacionContacto.TelefonoCelular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ResponsableLegal.InformacionContacto.TelefonoFijo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CedulaJuridica }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CedulaJuridica })

                </td>
            </tr>
        }
    </table>

</div>


<br><br><br><br>
