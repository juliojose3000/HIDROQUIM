@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h4>Analisis QuimicoAgua Residual</h4>
        <form action="/AnalisisAguaResidual/Edit" class="form-horizontal" method="post">
            <div class="col-md-9 col-md-offset-0">
                <div class="form-group">
                    <label class="control-label col-sm-4" for="IdAguaResidual">Id Agua Residual:</label>
                    <div class="col-sm-5">
                        <input type="text" readonly name="IdAguaResidual" value=@Html.DisplayFor(@model => model.IdAguaResidual) />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="ResultadoFechaMuestreo">Fecha muestreo:</label>
                    <div class="col-sm-5">
                        <input type="text" name="ResultadoFechaMuestreo" value=@Html.DisplayFor(@model => model.Analisis.FechaMuestreo) />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="FechaResultado">Fecha resultado:</label>
                    <div class="col-sm-5">
                        <input type="text" name="FechaResultado" value=@Html.DisplayFor(@model => model.Analisis.FechaResultado) />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Ubicacion">Ubicacion geografica:</label>
                    <div class="col-sm-5">
                        <input type="text" name="Ubicacion" value=@Html.DisplayFor(@model => model.Analisis.UbicacionGeografica) />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Ciuu">Cuii:</label>
                    <div class="col-sm-5">
                        <input type="text" readonly name="Ciuu" value=@Html.DisplayFor(@model => model.Ciiu.Cuii) />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="Ubicacion">Resultado:</label>
                    <div class="col-sm-5">
                        <input type="text" name="Resultado" value=@Html.DisplayFor(@model => model.ResultadoAnalisisQuimicoAguaResidual) />
                    </div>
                </div>

                <div class="form-group, col-sm-5">
                    <table class="table">
                        <tr>
                            <th>
                                Parametro
                            </th>
                            <th>
                                Valor
                            </th>
                        </tr>
                        @foreach (var c in ValorP)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => c.Parametro)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => c.Valor)
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="Cliente">Cliente:</label>
                    <div class="col-sm-10">
                        <input type="text" readonly name="Cliente" value=@Html.DisplayFor(@model => model.Analisis.Cliente.Nombre_cliente) />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-10" for="IdCliente">Id del cliente:</label>
                    <div class="col-sm-10">
                        <input type="text" readonly name="IdCliente" value=@Html.DisplayFor(@model => model.Analisis.Cliente.IdCliente) />
                    </div>
                </div>
            </div>

            <div class=" form-group ">
                <div class="row ">
                    <div class="col-sm-6 col-sm-offset-2 ">
                        <button class="form-horizontal btn btn-default" type="submit">Modificar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

}

