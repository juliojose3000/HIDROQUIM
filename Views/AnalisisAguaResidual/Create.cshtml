            //--------------------------------Get Actividad ciiu---------------------------------//

            $("#verificarCIIU").click(function () {

                var coodCiiu = $("#CIIU").val();
                $("#Actividad").text("");
                $("#divParameters div").remove();
                if (coodCiiu == "") {
