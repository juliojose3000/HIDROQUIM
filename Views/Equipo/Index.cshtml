<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Categor&iacute;a
        </th>
        <th>
            Precio
        </th>
        <th>
            Proveedor
        </th>
        <th>
            Cantidad Disponible
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Categoria.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Proveedor.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadDisponible)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdEquipo }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdEquipo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdEquipo })
            </td>
        </tr>
    }

</table>
